# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                             controllers.Application.index
GET         /releves                      controllers.Application.getReleves
POST        /addReleve                    controllers.Application.addReleve()

#Statistics
GET         /stats                        controllers.StatsController.index
GET         /stats/history                controllers.StatsController.getLastMonthHistory
GET         /stats/monthly-average        controllers.StatsController.getMonthlyAverageSpending


#Temp
GET         /form                         controllers.Application.addReleveForm()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
